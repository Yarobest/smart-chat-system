datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        String   @id @default(cuid())
  roomId    String
  senderId  String
  content   Json
  createdAt DateTime @default(now())

  sender User @relation(fields: [senderId], references: [id])
}
